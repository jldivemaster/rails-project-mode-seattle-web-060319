

<div class="content">
  <div class="maincontent">

  <h2>Create Account</h2>

    <%= form_for @user do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>
    <br>
      <%= f.label :password %>
      <%= f.password_field :password %>
    <br>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    <br>
      <%= f.submit "create" %>
    <% end %>
  </div>
</div>