
<div class="content">
  <h1 class="sub-header"><%= @project.name %></h1>
  <h5 class="desc"><%= @project.description %></h5>
  <div class="maincontent grid2">
    <div class="list">
      <ul>
        Region: <%= @project.location.name %><br><br>
        Price: $<%= @project.price %>0<br><br>
        Average Rating: <%= @project.rating %><br><br>
        Project Start Date: <%= @project.start_date %><br><br>
        Project Category: <%= @project.category.name %><br><br>
        Partner Organization: <%= link_to @project.organization.name, organization_path(@project.organization) %><br><br>
        Number of Available Volunteer Positions: <%= @project.available_spots %><br><br>
        <h3>Reserve your spot today!</h3>  <%= link_to "Register".html_safe, new_user_trip_path, class: "link-button" %>
      </ul>
    </div>
    <div class="imagebox">
      <img src="<%=asset_path(@project.img_url)%>">
    </div>
  </div>
</div>
